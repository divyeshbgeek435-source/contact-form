{% comment %}
  WhatsApp Chat Icon App Embed
  This embed adds a floating WhatsApp chat icon to the store
  Uses merchant's configured WhatsApp number from app settings
{% endcomment %}

{% assign position = block.settings.position | default: 'bottom-right' %}

<div 
  id="whatsapp-chat-icon-{{ block.id }}" 
  class="whatsapp-chat-icon"
  style="
    position: fixed;
    z-index: 9999;
    {% if position == 'bottom-left' %}
      bottom: 20px;
      left: 20px;
    {% elsif position == 'bottom-right' %}
      bottom: 20px;
      right: 20px;
    {% elsif position == 'top-left' %}
      top: 20px;
      left: 20px;
    {% elsif position == 'top-right' %}
      top: 20px;
      right: 20px;
    {% endif %}
  "
>
  <a
    id="whatsapp-link-{{ block.id }}"
    href="https://wa.me/1234567890"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Contact us on WhatsApp"
    style="
      display: flex;
      align-items: center;
      justify-content: center;
      width: 60px;
      height: 60px;
      background-color: #25D366;
      border-radius: 50%;
      box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      text-decoration: none;
    "
    onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0 6px 16px rgba(37, 211, 102, 0.6)';"
    onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 4px 12px rgba(37, 211, 102, 0.4)';"
  >
    <svg
      width="32"
      height="32"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      style="color: white;"
    >
      <path
        d="M17.472 14.382c-.297-.149-1.758-1.08-2.03-1.205-.272-.125-.47-.187-.669.187-.198.374-.768 1.205-.942 1.453-.173.248-.347.311-.644.161-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.056-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
        fill="currentColor"
      />
    </svg>
  </a>
</div>

<script>
  (function() {
    const shopId = '{{ shop.id }}';
    const shopIdOnly = shopId.split('/').pop();
    const iconContainer = document.getElementById('whatsapp-chat-icon-{{ block.id }}');
    const whatsappLink = document.getElementById('whatsapp-link-{{ block.id }}');
    
    if (!iconContainer || !whatsappLink) return;
    
    // Check if we're in theme editor (for preview purposes, show icon even if fetch fails)
    const isThemeEditor = window.Shopify && window.Shopify.designMode;
    
    // Fetch merchant WhatsApp number from backend
    fetch(`http://localhost:5000/api/users/${shopIdOnly}`)
      .then(response => response.json())
      .then(data => {
        if (data && data.data && data.data.whatsappNumber && data.data.currencyCode) {
          const phoneNumber = data.data.whatsappNumber;
          const countryCode = data.data.currencyCode.replace('+', '');
          
          if (phoneNumber && countryCode) {
            // Update WhatsApp link with real number
            whatsappLink.href = `https://wa.me/${countryCode}${phoneNumber}`;
          }
        } else if (!isThemeEditor) {
          // Hide icon if no number configured and not in theme editor
          iconContainer.style.display = 'none';
        }
      })
      .catch(error => {
        console.error('Error fetching WhatsApp number:', error);
        // In theme editor, keep showing the icon for preview
        // On frontend, hide if fetch fails
        if (!isThemeEditor) {
          iconContainer.style.display = 'none';
        }
      });
  })();
</script>

{% schema %}
{
  "name": "WhatsApp Chat Icon",
  "target": "body",
  "settings": [
    {
      "type": "header",
      "content": "WhatsApp Chat Icon Settings"
    },
    {
      "type": "paragraph",
      "content": "This icon uses your configured WhatsApp number from the app settings. No additional configuration needed!"
    },
    {
      "type": "header",
      "content": "Position Settings"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Icon Position",
      "info": "Choose where to display the WhatsApp chat icon on your store",
      "options": [
        {
          "value": "bottom-right",
          "label": "Bottom Right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom Left"
        },
        {
          "value": "top-right",
          "label": "Top Right"
        },
        {
          "value": "top-left",
          "label": "Top Left"
        }
      ],
      "default": "bottom-right"
    }
  ]
}
{% endschema %}

