{% comment %}  
{% assign position = block.settings.position | default: 'bottom-right' %}
{% assign icon_size = block.settings.icon_size | default: 60 %}
{% assign padding = block.settings.padding | default: 20 %}
{% assign bg_color = block.settings.bg_color | default: '#25D366' %}
{% assign hover_scale = block.settings.hover_scale | default: 1.1 %}
{% assign z_index = block.settings.z_index | default: 99999999 %}

<style>
  #whatsapp-chat-icon-{{ block.id }} {
    --wa-icon-size: {{ icon_size }}px;
    --wa-svg-size: {{ icon_size | divided_by: 2 }}px;
    --wa-bg-color: {{ bg_color }};
    --wa-icon-color: #FFFFFF;
    --wa-padding: {{ padding }}px;
    --wa-hover-scale: {{ hover_scale }};
    --wa-z-index: {{ z_index }};
    --wa-shadow-blur: {{ icon_size | divided_by: 5 }}px;
    --wa-shadow-spread: {{ icon_size | divided_by: 15 }}px;
  }

  #whatsapp-chat-icon-{{ block.id }} {
    position: fixed;
    z-index: var(--wa-z-index);
    {% if position == 'bottom-left' %}
      bottom: var(--wa-padding);
      left: 10px;
    {% elsif position == 'bottom-right' %}
      bottom: var(--wa-padding);
      right: 10px;
    {% endif %}
  }

  #whatsapp-link-{{ block.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--wa-icon-size);
    height: var(--wa-icon-size);
    background-color: var(--wa-bg-color);
    border-radius: 50%;
    box-shadow: 0 var(--wa-shadow-spread) var(--wa-shadow-blur) rgba(37, 211, 102, 0.4);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    text-decoration: none;
  }

  #whatsapp-link-{{ block.id }}:hover {
    transform: scale(var(--wa-hover-scale));
    box-shadow: 0 calc(var(--wa-shadow-spread) * 1.5) calc(var(--wa-shadow-blur) * 1.3) rgba(37, 211, 102, 0.6);
  }

  #whatsapp-link-{{ block.id }} svg {
    width: var(--wa-svg-size);
    height: var(--wa-svg-size);
    color: var(--wa-icon-color);
  }
</style>

<div id="whatsapp-chat-icon-{{ block.id }}" class="whatsapp-chat-icon">
  <a
    id="whatsapp-link-{{ block.id }}"
    href="https://wa.me/1234567890"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Contact us on WhatsApp"
  >
