<script>
  (function() {
    const shopId = '{{ shop.id }}';
    const shopIdOnly = shopId.split('/').pop();
    const iconContainer = document.getElementById('whatsapp-chat-icon-{{ block.id }}');
    const whatsappLink = document.getElementById('whatsapp-link-{{ block.id }}');
    
    if (!iconContainer || !whatsappLink) return;
    
    const isThemeEditor = window.Shopify && window.Shopify.designMode;
    
    fetch(`https://nodejs-qvgm.onrender.com/api/merchant/users/${shopIdOnly}`)
      .then(response => response.json())
      .then(data => {
        if (data && data.data && data.data.whatsappNumber && data.data.currencyCode) {
          const phoneNumber = data.data.whatsappNumber;
          const countryCode = data.data.currencyCode.replace('+', '');
          
          if (phoneNumber && countryCode) {
            whatsappLink.href = `https://wa.me/${countryCode}${phoneNumber}`;
            console.log('✅ WhatsApp number retrieved successfully:', `${countryCode}${phoneNumber}`);
          }
        } else if (!isThemeEditor) {
          iconContainer.style.display = 'none';
        }
      })
      .catch(error => {
        console.error('Error fetching WhatsApp number:', error);
        if (!isThemeEditor) {
          iconContainer.style.display = 'none';
        }
      });
  })();
</script>

